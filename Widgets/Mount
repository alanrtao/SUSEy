#!/bin/bash

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
WIDGET_DIR="${SCRIPT_DIR}"
cd $WIDGET_DIR

setterm --foreground 3

echo "Mounting Windows E: drive at ~/E: (${HOME}/E:)..."
mkdir -p ~/E:
sudo umount ~/E:
sudo mount -t ntfs-3g /dev/nvme0n1p5 ~/E:

